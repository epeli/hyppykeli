
@import "./vendor/normalize.css"

mobile = "only screen and (max-width : 768px)"


.layout
    left 3em
    right 3em
    position absolute
    a, a:visited
        color gray
    a:hover
        text-decoration none

.bb-wind-graph
    .graph-wrap
        border 1px solid black
        margin-bottom 1em
        padding 3em
    .graph
        width 100%
        height 400px
    .legend-box
        display inline-block
        width 10px
        height 10px
        border 1px solid black
        margin-right: 2px
    .legend ul
        list-style none


.options-container
    margin-bottom 1em
    font-size 8pt

.legend
    text-align left
    background-color white
    z-index 10
    border 1px solid black
    position absolute
    margin-left auto 0
    margin-right auto 0
    width 250px


footer
    margin-top 5em

@media mobile
    .layout
        left 0em
        right 0em
    .bb-wind-graph .graph-wrap
        padding 1em
    p
        margin-left 1em
    h1
        margin-left 0.2em
