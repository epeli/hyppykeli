
@import "./vendor/normalize.css"



.layout
    position absolute
    left 3em
    right 3em


.bb-wind-graph
    .graph-wrap
        border 1px solid black
        margin-bottom 1em
        padding 1em
        text-align center
    .graph
        width 100%
        height 400px
    .legend-box
        display inline-block
        width 10px
        height 10px
        border 1px solid black
        margin-right: 2px
    .legend ul
        list-style none


.options-container
    margin-bottom 1em
    font-size 8pt

.legend
    text-align left
    background-color white
    z-index 10
    border 1px solid black
    position absolute
    margin-left auto 0
    margin-right auto 0
    width 200px

